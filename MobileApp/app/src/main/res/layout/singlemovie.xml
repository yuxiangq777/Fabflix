<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = ".Login">

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Single Movie Page"
        android:id = "@+id/title"
        android:layout_centerHorizontal = "true"
        android:textColor = "@color/red"
        android:textSize = "25dp" />
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smovie_title"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal = "true"
        android:textSize = "25dp"/>
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smovie_year"
        android:layout_below="@+id/smovie_title"
        android:layout_centerHorizontal = "true"
        android:textSize = "25dp"/>
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smovie_director"
        android:layout_below="@+id/smovie_year"
        android:layout_centerHorizontal = "true"
        android:textSize = "25dp"/>
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smovie_rating"
        android:layout_below="@+id/smovie_director"
        android:layout_centerHorizontal = "true"
        android:textSize = "25dp"/>
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smovie_genres"
        android:layout_below="@+id/smovie_rating"
        android:layout_centerHorizontal = "true"
        android:textSize = "25dp"/>
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smovie_stars"
        android:layout_below="@+id/smovie_genres"
        android:layout_centerHorizontal = "true"
        android:textSize = "25dp"/>
</RelativeLayout>